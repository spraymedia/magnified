---
interface Props {
  id?: string;
  class?: string;
  bgColor?: 'white' | 'light' | 'dark' | 'primary';
  padding?: 'sm' | 'md' | 'lg';
}

const {
  id,
  class: className = '',
  bgColor = 'white',
  padding = 'lg',
} = Astro.props;

const bgClasses: Record<string, string> = {
  white: 'bg-white',
  light: 'bg-neutral-100',
  dark: 'bg-primary-500 text-white',
  primary: 'bg-primary-500 text-white',
};

const paddingClasses: Record<string, string> = {
  sm: 'py-8 md:py-12',
  md: 'py-12 md:py-16',
  lg: 'py-16 md:py-24',
};
---

<section
  id={id}
  class:list={[bgClasses[bgColor], paddingClasses[padding], className]}
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <slot />
  </div>
</section>
