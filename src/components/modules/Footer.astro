---
import { siteConfig } from '../../config/site';
---

<footer class="border-t-4 border-accent-500 bg-primary-500 text-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-[2fr_1fr_1fr_1fr] gap-8">
      <!-- Column 1: Logo & Contact -->
      <div>
        <img
          src="/images/logo.png"
          alt="Magnified SMSF Specialists"
          class="h-24 w-auto mb-6 brightness-0 invert"
          loading="lazy"
        />
        <ul class="space-y-3 text-sm text-primary-200">
          <li class="flex items-start gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0 mt-0.5 text-accent-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
            <a href={`tel:${siteConfig.phone.replace(/\s/g, '')}`} class="hover:text-accent-500 transition-colors">
              {siteConfig.phoneFormatted}
            </a>
          </li>
          <li class="flex items-start gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0 mt-0.5 text-accent-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"></rect><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg>
            <a href={`mailto:${siteConfig.email}`} class="hover:text-accent-500 transition-colors">
              {siteConfig.email}
            </a>
          </li>
          <li class="flex items-start gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 flex-shrink-0 mt-0.5 text-accent-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"></path><circle cx="12" cy="10" r="3"></circle></svg>
            <span>{siteConfig.address.full}</span>
          </li>
        </ul>
      </div>

      <!-- Column 2: Service Areas -->
      <div>
        <h3 class="text-base font-bold text-white mb-1">Service Areas</h3>
        <div class="w-10 h-0.5 bg-accent-500 mb-4"></div>
        <ul class="space-y-2 text-sm text-primary-200">
          {
            siteConfig.serviceAreas.map((area) => (
              <li>
                <a href={`/${area.slug}/`} class="hover:text-accent-500 transition-colors">
                  {area.name}
                </a>
              </li>
            ))
          }
          <li class="text-primary-300 text-xs mt-2">
            Clients across regional WA (in person or online)
          </li>
        </ul>
      </div>

      <!-- Column 3: Business Hours -->
      <div>
        <h3 class="text-base font-bold text-white mb-1">Business Hours</h3>
        <div class="w-10 h-0.5 bg-accent-500 mb-4"></div>
        <ul class="space-y-3 text-sm text-primary-200">
          <li>
            <span class="block text-white font-medium">Monday - Friday</span>
            <span>{siteConfig.hours.weekdays}</span>
          </li>
          <li>
            <span class="block text-white font-medium">Weekend</span>
            <span>{siteConfig.hours.weekend}</span>
          </li>
          <li class="text-primary-300 text-xs mt-2">
            {siteConfig.hours.note}
          </li>
        </ul>
      </div>

      <!-- Column 4: Connect -->
      <div>
        <h3 class="text-base font-bold text-white mb-1">Connect With Us</h3>
        <div class="w-10 h-0.5 bg-accent-500 mb-4"></div>

        <!-- Social -->
        <a
          href={siteConfig.social.facebook}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-primary-600 hover:bg-accent-500 hover:text-white transition-colors mb-5"
          aria-label="Facebook"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
          </svg>
        </a>

        <!-- CTA -->
        <a
          href="/contact-us/"
          class="inline-flex items-center justify-center w-full bg-accent-500 text-white px-6 py-3 rounded-lg font-semibold text-sm hover:bg-accent-600 transition-colors shadow-md mb-6"
        >
          Book Free Consultation
        </a>

        <!-- CPA Badge -->
        <div class="text-center">
          <img
            src="/images/cpa-badge.png"
            alt="CPA Practice"
            class="h-24 w-auto mx-auto mb-2"
            loading="lazy"
          />
          <p class="text-xs text-primary-300">Magnified SMSF Specialists is a CPA Practice</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-primary-400">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-xs text-primary-300">
        <p>
          Magnified SMSF Specialists is an Authorised Representative of SMSF Advisers Network Pty Ltd (SAN), AFSL No. {siteConfig.afsl}.
        </p>
        <p>&copy; {new Date().getFullYear()} {siteConfig.name}. All Rights Reserved.</p>
      </div>
    </div>
  </div>
</footer>
