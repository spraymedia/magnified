---
import SectionWrapper from '../ui/SectionWrapper.astro';
import Card from '../ui/Card.astro';
import { siteConfig } from '../../config/site';

interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = 'Our Comprehensive SMSF Solutions',
  subtitle,
} = Astro.props;

const serviceIcons = [
  // Setup & Admin
  '<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"></path><path d="M14 2v4a2 2 0 0 0 2 2h4"></path><path d="M10 9H8"></path><path d="M16 13H8"></path><path d="M16 17H8"></path></svg>',
  // Financial Reporting
  '<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" x2="12" y1="20" y2="10"></line><line x1="18" x2="18" y1="20" y2="4"></line><line x1="6" x2="6" y1="20" y2="16"></line></svg>',
  // Tax Strategies
  '<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><path d="M16 8h-6a2 2 0 1 0 0 4h4a2 2 0 1 1 0 4H8"></path><path d="M12 18V6"></path></svg>',
  // Strategic Compliance
  '<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path></svg>',
];
---

<SectionWrapper bgColor="light" id="services">
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold mb-4">{title}</h2>
    {subtitle && <p class="text-neutral-600 text-lg max-w-3xl mx-auto">{subtitle}</p>}
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {
      siteConfig.services.map((service, i) => (
        <Card href={`/services/${service.slug}/`} class="p-8">
          <div class="text-primary-500 mb-4" set:html={serviceIcons[i]} />
          <h3 class="text-xl font-bold text-primary-500 mb-3">{service.title}</h3>
          <p class="text-neutral-600 text-sm leading-relaxed mb-4">{service.description}</p>
          <span class="inline-flex items-center gap-1 text-accent-500 font-semibold text-sm group-hover:gap-2 transition-all">
            Learn More
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform group-hover:translate-x-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg>
          </span>
        </Card>
      ))
    }
  </div>
</SectionWrapper>
