---
import SectionWrapper from '../ui/SectionWrapper.astro';
import Button from '../ui/Button.astro';
import ServicesGrid from './ServicesGrid.astro';
import ValuesSection from './ValuesSection.astro';
import ReviewsSection from './ReviewsSection.astro';
import HowWeWorkSection from './HowWeWorkSection.astro';
import ContactSection from './ContactSection.astro';
import StatsBar from './StatsBar.astro';
import { siteConfig } from '../../config/site';

interface Props {
  locationName: string;
  heroImage?: string;
  heroSubheading: string;
  trustedPartnerText: string;
  servicesIntro: string;
  isThisYouIntro: string;
  whyTrustsIntro: string;
  dedicatedSupportText: string;
  trustedByText: string;
  contactIntro: string;
}

const {
  locationName,
  heroImage,
  heroSubheading,
  trustedPartnerText,
  servicesIntro,
  isThisYouIntro,
  whyTrustsIntro,
  dedicatedSupportText,
  trustedByText,
  contactIntro,
} = Astro.props;
---

<!-- Hero -->
<section class="relative min-h-[600px] md:min-h-[700px] flex items-center overflow-hidden">
  <div class="absolute inset-0">
    {heroImage ? (
      <img
        src={heroImage}
        alt=""
        class="w-full h-full object-cover"
        loading="eager"
      />
    ) : (
      <div class="w-full h-full bg-neutral-400"></div>
    )}
    <div class="absolute inset-0 bg-accent-500/20"></div>
  </div>
  <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 md:py-24 w-full">
    <div class="max-w-2xl">
      <div class="bg-[#b8bcbb]/60 backdrop-blur-md rounded-3xl p-10 md:p-12 shadow-xl">
        <h1 class="text-3xl md:text-4xl font-bold text-primary-500 leading-tight mb-5">
          SMSF Specialists in <span class="text-accent-500">{locationName}</span>
        </h1>
        <p class="text-base md:text-lg text-neutral-700 leading-relaxed mb-6">
          {heroSubheading}
        </p>
        <Button href="/contact-us/" variant="primary" size="lg">
          Book Your Free Discovery Session
        </Button>
      </div>
    </div>
  </div>
</section>

<!-- Stats Bar -->
<StatsBar bgColor="accent" showTagline={false} showIcons={false} padding="xs" />

<!-- Trusted Partner -->
<SectionWrapper bgColor="light">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
    <div>
      <p class="text-accent-500 font-semibold text-sm uppercase tracking-wide mb-2 animate-on-scroll">Your Trusted Partner</p>
      <h2 class="text-3xl md:text-4xl font-bold mb-6 animate-on-scroll delay-100">Your Trusted Partner for Retirement Control in {locationName}</h2>
      <div class="border-l-4 border-accent-500 pl-5 mb-6 animate-on-scroll delay-200">
        <p class="text-neutral-700 text-lg leading-relaxed">{trustedPartnerText}</p>
      </div>
      <div class="animate-on-scroll delay-300">
        <Button href="/contact-us/" variant="primary" size="lg">Book Your Free Discovery Session</Button>
      </div>
    </div>
    <div class="relative animate-on-scroll delay-200">
      <div class="absolute -top-4 -right-4 w-full h-full rounded-2xl bg-accent-500/10 hidden lg:block"></div>
      <img
        src="/images/magnified-smsf-team-mandurah.jpg"
        alt={`Magnified SMSF Specialists team in ${locationName}`}
        class="relative w-full rounded-2xl shadow-2xl ring-1 ring-neutral-200 max-h-[550px] object-cover"
        loading="lazy"
      />
      <div class="absolute -bottom-6 -left-4 right-8 lg:right-12 bg-accent-500 rounded-xl p-6 shadow-xl">
        <div class="flex items-start gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white/40 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M4.583 17.321C3.553 16.227 3 15 3 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 0 1-3.5 3.5 3.871 3.871 0 0 1-2.748-1.179zm10 0C13.553 16.227 13 15 13 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 0 1-3.5 3.5 3.871 3.871 0 0 1-2.748-1.179z"/>
          </svg>
          <p class="text-white text-base md:text-lg font-medium leading-relaxed">
            We act with Integrity, grow through Teamwork, spark Innovation, build Trust, and Empower people to thrive.
          </p>
        </div>
      </div>
      <div class="h-10"></div>
    </div>
  </div>
</SectionWrapper>

<!-- Meet Your Strategic Partner -->
<SectionWrapper bgColor="white">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
    <div class="order-2 lg:order-1 relative animate-on-scroll delay-200">
      <div class="absolute -top-4 -left-4 w-full h-full rounded-2xl bg-accent-500/10 hidden lg:block"></div>
      <img
        src="/images/magda-betlem.jpg"
        alt="Magda Betlem - Principal SMSF Specialist"
        class="relative rounded-2xl shadow-2xl ring-1 ring-neutral-200 w-full max-h-[500px] object-cover"
        loading="lazy"
      />
      <img
        src="/images/smsf-accredited.png"
        alt="SMSF Association Accredited Specialist"
        class="absolute -bottom-4 -right-4 h-24 w-auto bg-white rounded-lg p-2 shadow-lg z-10"
        loading="lazy"
      />
    </div>
    <div class="order-1 lg:order-2">
      <p class="text-accent-500 font-semibold text-sm uppercase tracking-wide mb-2 animate-on-scroll">Meet Your Strategic Partner</p>
      <h2 class="text-3xl md:text-4xl font-bold mb-4 animate-on-scroll delay-100">Magda Betlem</h2>
      <p class="text-accent-500 font-semibold mb-6 animate-on-scroll delay-100">Principal SMSF Specialist</p>
      <p class="text-neutral-700 leading-relaxed animate-on-scroll delay-200">
        With over 18 years of dedicated SMSF expertise, Magda Betlem (CPA) leads our specialist team with passion and integrity. As an Authorised Representative of the SMSF Advisers Network (SAN, AFSL 430062), she helps clients confidently manage their fund's compliance, solve complex SMSF challenges allowing trustees to benefit from the investment flexibility that SMSFs offer whilst ensuring your reporting obligations are met. Supporting clients across Mandurah, Perth, and regional WA, Magda and her team deliver the personal touch and technical depth that makes all the difference.
      </p>
    </div>
  </div>
</SectionWrapper>

<!-- Services -->
<ServicesGrid
  title={`Our SMSF Services Tailored for ${locationName} Trustees`}
  subtitle={servicesIntro}
/>

<!-- Is This You -->
<SectionWrapper bgColor="accent">
  <div class="max-w-3xl mx-auto">
    <p class="text-white/80 font-semibold text-sm uppercase tracking-wide mb-2 animate-on-scroll">Your Profile</p>
    <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 animate-on-scroll delay-100">Is This You?</h2>
    <p class="text-white/90 text-lg mb-6 animate-on-scroll delay-200">{isThisYouIntro}</p>
    <ul class="space-y-4 mb-8 animate-on-scroll delay-300">
      <li class="flex items-start gap-3 pl-4 border-l-2 border-white/50">
        <span class="text-white/90">Are preparing for retirement, often aged 55 to 65</span>
      </li>
      <li class="flex items-start gap-3 pl-4 border-l-2 border-white/50">
        <span class="text-white/90">Hold a super balance of $600,000 or more</span>
      </li>
      <li class="flex items-start gap-3 pl-4 border-l-2 border-white/50">
        <span class="text-white/90">Earn a personal income of $150,000+ annually</span>
      </li>
      <li class="flex items-start gap-3 pl-4 border-l-2 border-white/50">
        <span class="text-white/90">Value tailored SMSF compliance support and investment strategy documentation</span>
      </li>
    </ul>
    <p class="text-white/90 mb-6">
      If you're outside these ranges but value expert SMSF compliance services, we're still here to help.
    </p>
    <Button href="/contact-us/" variant="white" size="md">Book Now</Button>
  </div>
</SectionWrapper>

<!-- Why Trusts -->
<SectionWrapper bgColor="white">
  <div class="text-center mb-12 animate-on-scroll">
    <p class="text-accent-500 font-semibold text-sm uppercase tracking-wide mb-2">Why Choose Us</p>
    <h2 class="text-3xl md:text-4xl font-bold mb-4">Why {locationName} Trusts Magnified SMSF Specialists</h2>
    <p class="text-neutral-600 text-lg max-w-2xl mx-auto">{whyTrustsIntro}</p>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="animate-on-scroll">
      <div class="bg-white rounded-xl p-8 border-l-4 border-accent-500 shadow-sm hover:-translate-y-1 hover:shadow-lg transition-all duration-300 h-full">
        <h3 class="text-xl font-bold text-primary-500 mb-3">Over 18 Years of Exclusive SMSF Expertise</h3>
        <p class="text-neutral-600">Benefit from unmatched experience in Self-Managed Super Funds, ensuring expert guidance tailored to your needs.</p>
      </div>
    </div>
    <div class="animate-on-scroll delay-100">
      <div class="bg-white rounded-xl p-8 border-l-4 border-accent-500 shadow-sm hover:-translate-y-1 hover:shadow-lg transition-all duration-300 h-full">
        <h3 class="text-xl font-bold text-primary-500 mb-3">Dedicated Local Support Team</h3>
        <p class="text-neutral-600">{dedicatedSupportText}</p>
      </div>
    </div>
    <div class="animate-on-scroll delay-200">
      <div class="bg-white rounded-xl p-8 border-l-4 border-accent-500 shadow-sm hover:-translate-y-1 hover:shadow-lg transition-all duration-300 h-full">
        <h3 class="text-xl font-bold text-primary-500 mb-3">Trusted by {locationName} Professionals</h3>
        <p class="text-neutral-600">{trustedByText}</p>
      </div>
    </div>
    <div class="animate-on-scroll delay-300">
      <div class="bg-white rounded-xl p-8 border-l-4 border-accent-500 shadow-sm hover:-translate-y-1 hover:shadow-lg transition-all duration-300 h-full">
        <h3 class="text-xl font-bold text-primary-500 mb-3">Award-Winning Service Excellence</h3>
        <p class="text-neutral-600">Experience the difference with our award-winning solutions, designed to help you maximise your SMSF benefits.</p>
      </div>
    </div>
  </div>
</SectionWrapper>

<!-- Values -->
<ValuesSection />

<!-- Reviews -->
<ReviewsSection />

<!-- How We Work -->
<HowWeWorkSection />

<!-- Contact -->
<ContactSection
  title={`Contact Your ${locationName} SMSF Experts Today`}
  description={contactIntro}
/>
