---
import SectionWrapper from '../ui/SectionWrapper.astro';
import Button from '../ui/Button.astro';
import { siteConfig } from '../../config/site';

interface Props {
  title?: string;
  description?: string;
  showForm?: boolean;
}

const {
  title = 'Take the Next Step Towards Your Retirement Goals',
  description = 'Ready to discuss your SMSF needs, explore a strategic partnership, or simply have a question? Our specialist team is here to provide expert guidance and support for your retirement journey',
  showForm = true,
} = Astro.props;
---

<SectionWrapper bgColor="white" id="contact">
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold mb-4">{title}</h2>
    <p class="text-neutral-600 text-lg max-w-3xl mx-auto">{description}</p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
    <!-- Contact Form -->
    {
      showForm && (
        <div>
          <h3 class="text-xl font-bold text-primary-500 mb-2">Send Us a Message</h3>
          <p class="text-neutral-600 text-sm mb-6">
            Prefer to get in touch via email? Fill out the form below, and our team will get back to you promptly.
          </p>
          <form class="space-y-4" name="contact" method="POST" data-netlify="true">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label for="firstName" class="block text-sm font-medium text-neutral-700 mb-1">
                  First Name
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none transition-colors"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-neutral-700 mb-1">
                  Last Name
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none transition-colors"
                />
              </div>
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-neutral-700 mb-1">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none transition-colors"
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-neutral-700 mb-1">
                Phone
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none transition-colors"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-neutral-700 mb-1">
                Message
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none transition-colors resize-y"
              />
            </div>
            <Button type="submit" variant="primary" size="lg" class="w-full sm:w-auto">
              Send Message
            </Button>
          </form>
        </div>
      )
    }

    <!-- Contact Info -->
    <div class="space-y-8">
      <div>
        <h3 class="text-xl font-bold text-primary-500 mb-4">Prefer to Speak Directly?</h3>
        <div class="space-y-4">
          <a
            href={`tel:${siteConfig.phone.replace(/\s/g, '')}`}
            class="flex items-center gap-3 text-neutral-700 hover:text-accent-500 transition-colors group"
          >
            <span class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-primary-50 text-primary-500 group-hover:bg-accent-50 group-hover:text-accent-500 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
            </span>
            <span class="font-semibold">Call Now: {siteConfig.phone}</span>
          </a>
          <a
            href={`mailto:${siteConfig.email}`}
            class="flex items-center gap-3 text-neutral-700 hover:text-accent-500 transition-colors group"
          >
            <span class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-primary-50 text-primary-500 group-hover:bg-accent-50 group-hover:text-accent-500 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"></rect><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg>
            </span>
            <span class="font-semibold">Email: {siteConfig.email}</span>
          </a>
        </div>
      </div>

      <div>
        <h3 class="text-xl font-bold text-primary-500 mb-4">Visit Us in Mandurah</h3>
        <div class="flex items-start gap-3">
          <span class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-primary-50 text-primary-500 flex-shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"></path><circle cx="12" cy="10" r="3"></circle></svg>
          </span>
          <p class="text-neutral-700">{siteConfig.address.full}.</p>
        </div>
        <!-- Map embed -->
        <div class="mt-4 rounded-lg overflow-hidden shadow-md">
          <iframe
            src={`https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3383.1!2d${siteConfig.coordinates.lng}!3d${siteConfig.coordinates.lat}!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzLCsDMxJzM3LjAiUyAxMTXCsDQzJzE4LjEiRQ!5e0!3m2!1sen!2sau!4v1`}
            width="100%"
            height="250"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Magnified SMSF Specialists Office Location"
          ></iframe>
        </div>
      </div>

      <div class="bg-primary-50 rounded-xl p-6">
        <h3 class="text-xl font-bold text-primary-500 mb-2">Download Our Free SMSF Guide</h3>
        <p class="text-neutral-600 text-sm mb-4">
          Get our comprehensive guide and discover proven strategies to optimise your retirement savings.
        </p>
        <Button
          href="https://magnifiedsmsf.com.au/wp-content/uploads/2025/07/Magnified-SMSF-Specialists-Your-Guide-to-Self-Managed-Super-Funds-SMSF.pdf"
          variant="primary"
          size="md"
        >
          Download Free SMSF Guide
        </Button>
      </div>
    </div>
  </div>
</SectionWrapper>
