---
import SectionWrapper from '../ui/SectionWrapper.astro';

interface Props {
  bgColor?: 'accent' | 'primary' | 'white';
  showIcons?: boolean;
  showTagline?: boolean;
  padding?: 'xs' | 'sm' | 'md' | 'lg';
}

const {
  bgColor = 'accent',
  showIcons = false,
  showTagline = true,
  padding = 'md',
} = Astro.props;

const textColor = bgColor === 'white' ? 'text-primary-500' : 'text-white';
const iconColor = bgColor === 'white' ? 'text-accent-500' : 'text-white';
const numberColor = bgColor === 'white' ? 'text-accent-500' : 'text-white';
const subtitleColor = bgColor === 'white' ? 'text-neutral-600' : 'text-white/90';
const taglineColor = bgColor === 'white' ? 'text-neutral-500 italic' : bgColor === 'primary' ? 'text-primary-200 italic' : 'text-white/80 italic';

const stats = [
  {
    number: '18+',
    label: 'Years of Specialist Experience',
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"></path><path d="M16 2v4"></path><rect width="18" height="18" x="3" y="4" rx="2"></rect><path d="M3 10h18"></path></svg>',
  },
  {
    number: '100%',
    label: 'Local, Dedicated Support Team',
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 21a8 8 0 0 0-16 0"></path><circle cx="10" cy="8" r="5"></circle><path d="M22 20c0-3.37-2-6.5-4-8a5 5 0 0 0-.45-8.3"></path></svg>',
  },
  {
    number: '5â˜…',
    label: 'Personalised, Proactive Client Care',
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"></path></svg>',
  },
  {
    number: 'WA',
    label: 'Valued by SMSF Trustees Across Western Australia',
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"></path></svg>',
  },
];
---

<SectionWrapper bgColor={bgColor} padding={padding}>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-2 text-center">
    {
      stats.map((stat) => (
        <div class="p-2">
          {showIcons && (
            <div class:list={[iconColor, 'mb-2']}>
              <div class="mx-auto w-fit" set:html={stat.icon} />
            </div>
          )}
          <div class:list={[numberColor, 'text-3xl md:text-4xl font-extrabold mb-1']}>
            {stat.number}
          </div>
          <p class:list={[subtitleColor, 'text-sm font-medium']}>
            {stat.label}
          </p>
        </div>
      ))
    }
  </div>
  {showTagline && (
    <div class="text-center mt-6">
      <p class:list={[taglineColor, 'text-lg']}>
        We act with Integrity, grow through Teamwork, spark Innovation, build Trust, and Empower people to thrive.
      </p>
    </div>
  )}
</SectionWrapper>
