---
import Layout from '../layouts/Layout.astro';
import SectionWrapper from '../components/ui/SectionWrapper.astro';
import Button from '../components/ui/Button.astro';
---

<Layout title="Coming Soon" description="This page is coming soon. Stay tuned for updates from Magnified SMSF Specialists.">
  <SectionWrapper bgColor="white">
    <div class="text-center max-w-2xl mx-auto py-16">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Coming Soon</h1>
      <p class="text-neutral-600 text-lg mb-8">
        We're working on something great. Stay tuned for updates.
      </p>
      <Button href="/" variant="primary" size="lg">
        Return Home
      </Button>
    </div>
  </SectionWrapper>
</Layout>
