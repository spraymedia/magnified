---
import Layout from '../layouts/Layout.astro';
import SectionWrapper from '../components/ui/SectionWrapper.astro';
import Button from '../components/ui/Button.astro';
import ValuesSection from '../components/modules/ValuesSection.astro';
import ReviewsSection from '../components/modules/ReviewsSection.astro';
import HowWeWorkSection from '../components/modules/HowWeWorkSection.astro';
import ContactSection from '../components/modules/ContactSection.astro';
import StatsBar from '../components/modules/StatsBar.astro';
import { siteConfig } from '../config/site';

const team = [
  {
    name: 'Magda Betlem',
    role: 'Principal SMSF Specialist',
    image: '/images/team/magda.jpg',
  },
  {
    name: 'Bianca Kulker',
    role: 'SMSF Administrator',
    image: '/images/team/bianca.jpg',
  },
  {
    name: 'Milena Ribeiro',
    role: 'SMSF Administrator',
    image: '/images/team/milena.jpg',
  },
  {
    name: 'Tania Magee',
    role: 'Corporate Services & Administration',
    image: '/images/team/tania.jpg',
  },
];
---

<Layout
  title="About Our Mandurah SMSF Specialists"
  description="Discover the values and 18+ years' SMSF expertise behind our Mandurah team. Integrity, teamwork and innovation shape the personalised support we deliver."
>
  <!-- About Hero Banner -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="/images/about-banner.jpg"
        alt=""
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-[#b8bcbb]/75 backdrop-blur-sm"></div>
    </div>

    <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24 md:py-32">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-primary-500 mb-4">
          About <span class="text-accent-500">Magnified SMSF Specialists</span>
        </h1>
        <p class="text-lg md:text-xl text-primary-500/80 font-light max-w-3xl mx-auto">
          Dedicated SMSF expertise, personalised guidance, and a commitment to your financial confidence.
        </p>
      </div>
    </div>
  </section>

  <!-- Stats Bar -->
  <StatsBar bgColor="accent" showTagline={false} padding="xs" />

  <!-- Main Introduction -->
  <SectionWrapper bgColor="white">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: Text Content -->
      <div>
        <p class="text-accent-500 font-semibold text-sm uppercase tracking-wide mb-2 animate-on-scroll">About Us</p>
        <h2 class="text-3xl md:text-4xl font-bold mb-6 animate-on-scroll delay-100">
          Your Trusted Partner for Retirement Control in Perth & Mandurah
        </h2>

        <!-- Lead paragraph with accent left border -->
        <div class="border-l-4 border-accent-500 pl-5 mb-6 animate-on-scroll delay-200">
          <p class="text-neutral-700 text-lg leading-relaxed">
            At Magnified SMSF Specialists, we believe your retirement journey should be a source of confidence, not complexity. With over 18 years of specialist SMSF expertise, we are dedicated to empowering successful Australians like you to take complete control of your Self-Managed Super Fund (SMSF).
          </p>
        </div>

        <p class="text-neutral-700 text-lg leading-relaxed mb-6 animate-on-scroll delay-300">
          Our mission is to simplify the intricate world of superannuation, helping you make informed, confident decisions that secure your financial future right here in Perth, Mandurah, and Regional WA.
        </p>

        <!-- CTA area with subtle divider -->
        <div class="border-t border-neutral-200 pt-6 mt-2 animate-on-scroll delay-400">
          <p class="text-neutral-600 text-lg mb-6">
            Ready to simplify your SMSF and take control of your retirement?
          </p>
          <Button href="/contact-us/" variant="primary" size="lg">
            Book Your Free Discovery Session
          </Button>
        </div>
      </div>

      <!-- Right: Image with Overlapping Quote Card -->
      <div class="relative animate-on-scroll delay-200">
        <!-- Decorative accent shape behind image -->
        <div class="absolute -top-4 -right-4 w-full h-full rounded-2xl bg-accent-500/10 hidden lg:block"></div>

        <!-- Main image -->
        <img
          src="/images/team-mandurah.jpg"
          alt="Magnified SMSF Specialists team in Mandurah"
          class="relative w-full rounded-2xl shadow-2xl ring-1 ring-neutral-200 max-h-[550px] object-cover"
          loading="lazy"
        />

        <!-- Overlapping quote card -->
        <div class="absolute -bottom-6 -left-4 right-8 lg:right-12 bg-accent-500 rounded-xl p-6 shadow-xl">
          <div class="flex items-start gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white/40 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M4.583 17.321C3.553 16.227 3 15 3 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 0 1-3.5 3.5 3.871 3.871 0 0 1-2.748-1.179zm10 0C13.553 16.227 13 15 13 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 0 1-3.5 3.5 3.871 3.871 0 0 1-2.748-1.179z"/>
            </svg>
            <p class="text-white text-base md:text-lg font-medium leading-relaxed">
              We act with Integrity, grow through Teamwork, spark Innovation, build Trust, and Empower people to thrive.
            </p>
          </div>
        </div>

        <!-- Bottom spacer for overlapping quote card -->
        <div class="h-10"></div>
      </div>
    </div>
  </SectionWrapper>

  <!-- Licensed Superannuation Advice -->
  <SectionWrapper bgColor="light">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: Image with Overlapping Accreditation Card -->
      <div class="relative order-2 lg:order-1 animate-on-scroll delay-200">
        <!-- Decorative accent shape behind image -->
        <div class="absolute -top-4 -left-4 w-full h-full rounded-2xl bg-accent-500/10 hidden lg:block"></div>

        <!-- Main image -->
        <img
          src="/images/about-hero.jpg"
          alt="Magda Betlem - Licensed SMSF Specialist"
          class="relative w-full rounded-2xl shadow-2xl ring-1 ring-neutral-200 max-h-[550px] object-cover"
          loading="lazy"
        />

        <!-- Overlapping accreditation card -->
        <div class="absolute -bottom-6 left-8 lg:left-12 -right-4 bg-accent-500 rounded-xl p-5 shadow-xl">
          <div class="flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white/60 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"></path></svg>
            <div>
              <p class="text-white font-semibold text-sm">AFSL 430062</p>
              <p class="text-white/80 text-sm">Restricted to Superannuation Only</p>
            </div>
          </div>
        </div>

        <!-- Bottom spacer for overlapping card -->
        <div class="h-10"></div>
      </div>

      <!-- Right: Text Content -->
      <div class="order-1 lg:order-2">
        <p class="text-accent-500 font-semibold text-sm uppercase tracking-wide mb-2 animate-on-scroll">Our Difference</p>
        <h2 class="text-3xl md:text-4xl font-bold mb-6 animate-on-scroll delay-100">
          Licensed Superannuation Advice &ndash; A True Point of Difference
        </h2>

        <!-- Lead paragraph with accent left border -->
        <div class="border-l-4 border-accent-500 pl-5 mb-6 animate-on-scroll delay-200">
          <p class="text-neutral-700 text-lg leading-relaxed">
            At Magnified SMSF Specialists, we're proud to be authorised under the SMSF Adviser Network (SAN, AFSL 430062). This licence allows us to go beyond compliance and administration, offering specialist, licensed superannuation advice to help our clients make confident, strategic decisions for their future.
          </p>
        </div>

        <p class="text-neutral-700 text-lg leading-relaxed mb-6 animate-on-scroll delay-300">
          Unlike many accounting firms that are limited to tax and compliance work, our AFSL accreditation means we can provide:
        </p>

        <ul class="space-y-3 mb-8 animate-on-scroll delay-300">
          <li class="flex items-start gap-3 pl-4 border-l-2 border-accent-500/40">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-500 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6 9 17l-5-5"></path></svg>
            <span class="text-neutral-700">Guidance tailored to your superannuation strategy and retirement goals</span>
          </li>
          <li class="flex items-start gap-3 pl-4 border-l-2 border-accent-500/40">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-500 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6 9 17l-5-5"></path></svg>
            <span class="text-neutral-700">Advice on contributions, pensions, and structuring your SMSF</span>
          </li>
          <li class="flex items-start gap-3 pl-4 border-l-2 border-accent-500/40">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-500 flex-shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6 9 17l-5-5"></path></svg>
            <span class="text-neutral-700">Clarity on complex rules and opportunities to ensure your fund is working for you</span>
          </li>
        </ul>

        <p class="text-neutral-700 text-lg leading-relaxed animate-on-scroll delay-400">
          Importantly, our AFSL is restricted to superannuation only. This ensures our focus remains on your SMSF and retirement outcomes, not on selling financial products. With licensed advice and specialist SMSF expertise, we provide a more comprehensive, trusted service so you can excel in building your future.
        </p>
      </div>
    </div>
  </SectionWrapper>

  <!-- Team Section -->
  <SectionWrapper bgColor="white">
    <div class="text-center mb-12 animate-on-scroll">
      <p class="text-accent-500 font-semibold text-sm uppercase tracking-wide mb-2">Meet the Team</p>
      <h2 class="text-3xl md:text-4xl font-bold mb-4">The Magnified SMSF Specialists Team</h2>
      <p class="text-neutral-600 text-lg max-w-2xl mx-auto">
        At the heart of Magnified SMSF Specialists is a team driven by passion, integrity, and a shared commitment to your SMSF success.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        team.map((member, index) => (
          <div class:list={[
            'group relative rounded-2xl overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 animate-on-scroll',
            index === 1 && 'delay-100',
            index === 2 && 'delay-200',
            index === 3 && 'delay-300',
          ]}>
            <!-- Decorative accent border top-left -->
            <div class="absolute top-0 left-0 w-16 h-16 border-t-4 border-l-4 border-accent-500 rounded-tl-2xl z-10"></div>

            <!-- Image with hover zoom -->
            <div class="overflow-hidden aspect-[3/4]">
              <img
                src={member.image}
                alt={member.name}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
            </div>

            <!-- Name/role overlay at bottom with gradient -->
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-accent-500 via-accent-500/90 to-transparent pt-16 pb-5 px-5">
              <h3 class="text-lg font-bold text-white">{member.name}</h3>
              <p class="text-white/80 text-sm italic">{member.role}</p>
            </div>
          </div>
        ))
      }
    </div>
  </SectionWrapper>

  <!-- Values -->
  <ValuesSection />

  <!-- Reviews -->
  <ReviewsSection />

  <!-- How We Work -->
  <HowWeWorkSection />

  <!-- Contact / CTA -->
  <ContactSection
    title="Ready to Elevate Your SMSF Journey?"
    description="Discover how Magnified SMSF Specialists can provide the clarity, confidence, and expert support you need for your Self-Managed Super Fund."
  />
</Layout>
