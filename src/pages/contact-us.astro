---
import Layout from '../layouts/Layout.astro';
import StatsBar from '../components/modules/StatsBar.astro';
import ContactSection from '../components/modules/ContactSection.astro';
import MapSection from '../components/modules/MapSection.astro';
import { siteConfig } from '../config/site';
---

<Layout
  title="Contact Magnified SMSF Specialists"
  description="Get in touch with Perth & Mandurah's SMSF specialists. Call +61 (8) 9584 6677, email info@magnifiedsmsf.com.au, or visit Unit 2/106 Pinjarra Road, Mandurah WA 6210."
>
  <!-- Hero -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="/images/contact-us-hero.jpg"
        alt=""
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-[#b8bcbb]/75 backdrop-blur-sm"></div>
    </div>
    <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24 md:py-32">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-primary-500 mb-4">
          Your Path To <span class="text-accent-500">SMSF Clarity</span>
        </h1>
        <p class="text-lg md:text-xl text-primary-500/80 font-light max-w-3xl mx-auto">
          Ready to take confident control of your Self-Managed Super Fund journey? Whether you have a specific question, want to book a consultation, or are ready to partner with Perth's expert SMSF specialists, we're here to help.
        </p>
      </div>
    </div>
  </section>

  <!-- Stats Bar -->
  <StatsBar bgColor="primary" />

  <!-- Contact Form & Details -->
  <ContactSection
    title="Contact Magnified SMSF Specialists"
    description="Our specialist team is here to provide expert guidance and support for your retirement journey."
  />

  <!-- Map -->
  <MapSection />
</Layout>
