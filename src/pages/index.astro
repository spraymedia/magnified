---
import Layout from '../layouts/Layout.astro';
import SectionWrapper from '../components/ui/SectionWrapper.astro';
import Button from '../components/ui/Button.astro';
import ServicesGrid from '../components/modules/ServicesGrid.astro';
import ReviewsSection from '../components/modules/ReviewsSection.astro';
import HowWeWorkSection from '../components/modules/HowWeWorkSection.astro';
import ValuesSection from '../components/modules/ValuesSection.astro';
import ContactSection from '../components/modules/ContactSection.astro';
import MapSection from '../components/modules/MapSection.astro';
import StatsBar from '../components/modules/StatsBar.astro';
import { siteConfig } from '../config/site';
---

<Layout
  title="Take Control of Your Retirement Journey with True SMSF Specialists"
  description="Secure your financial future with expert SMSF compliance management, personalised support, and practical guidance tailored to your fund's needs. Magnified SMSF Specialists in Perth & Mandurah."
>
  <!-- Hero Section -->
  <section class="relative min-h-[600px] md:min-h-[700px] flex items-center overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="/images/smsf-specialists-perth-mandurah-hero.jpg"
        alt="Magnified SMSF Specialists Perth"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-accent-500/20"></div>
    </div>
    <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 md:py-24 w-full">
      <div class="max-w-2xl">
        <div class="bg-[#b8bcbb]/60 backdrop-blur-md rounded-3xl p-10 md:p-12 shadow-xl">
          <h1 class="text-3xl md:text-4xl font-bold text-primary-500 leading-tight mb-5">
            Take Control of Your Retirement Journey with <span class="text-accent-500">True SMSF Specialists</span>
          </h1>
          <p class="text-base md:text-lg text-neutral-700 leading-relaxed mb-6">
            Secure your financial future with expert SMSF compliance management, personalised support, and practical guidance tailored to your fund's needs. At Magnified SMSF Specialists, we simplify the complex world of super, helping you make confident, informed decisions about managing your retirement savings
          </p>
          <Button href="/contact-us/" variant="primary" size="lg">
            Book Your Free Discovery Session
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Bar -->
  <StatsBar bgColor="accent" />

  <!-- Expert SMSF Management -->
  <SectionWrapper bgColor="light">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div>
        <p class="text-accent-500 font-semibold text-sm uppercase tracking-wide mb-2 animate-on-scroll">Our Expertise</p>
        <h2 class="text-3xl md:text-4xl font-bold mb-6 animate-on-scroll delay-100">Expert SMSF Management with Magnified SMSF Specialists</h2>
        <div class="border-l-4 border-accent-500 pl-5 mb-6 animate-on-scroll delay-200">
          <p class="text-neutral-700 text-lg leading-relaxed">
            Managing your super shouldn't feel overwhelming. We work closely with you to navigate your SMSF compliance obligations and administrative needs. Whether you're setting up an SMSF or maintaining your fund's records, we're here to help you meet your trustee responsibilities with clarity.
          </p>
        </div>
        <div class="animate-on-scroll delay-300">
          <Button href="/contact-us/" variant="primary" size="md">
            Book Now
          </Button>
        </div>
      </div>
      <div class="relative animate-on-scroll delay-200">
        <div class="absolute -top-4 -right-4 w-full h-full rounded-2xl bg-accent-500/10 hidden lg:block"></div>
        <img
          src="/images/magnified-smsf-team-mandurah.jpg"
          alt="Magnified SMSF Specialists team in Mandurah"
          class="relative rounded-2xl shadow-2xl ring-1 ring-neutral-200 w-full max-h-[500px] object-cover"
          loading="lazy"
        />
      </div>
    </div>
  </SectionWrapper>

  <!-- Meet Your Strategic Partner -->
  <SectionWrapper bgColor="white">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div class="order-2 lg:order-1 relative animate-on-scroll delay-200">
        <div class="absolute -top-4 -left-4 w-full h-full rounded-2xl bg-accent-500/10 hidden lg:block"></div>
        <img
          src="/images/magda-betlem.jpg"
          alt="Magda Betlem - Principal SMSF Specialist"
          class="relative rounded-2xl shadow-2xl ring-1 ring-neutral-200 w-full max-h-[500px] object-cover"
          loading="lazy"
        />
        <img
          src="/images/smsf-accredited.png"
          alt="SMSF Association Accredited Specialist"
          class="absolute -bottom-4 -right-4 h-24 w-auto bg-white rounded-lg p-2 shadow-lg z-10"
          loading="lazy"
        />
      </div>
      <div class="order-1 lg:order-2">
        <p class="text-accent-500 font-semibold text-sm uppercase tracking-wide mb-2 animate-on-scroll">Meet Your Strategic Partner</p>
        <h2 class="text-3xl md:text-4xl font-bold mb-4 animate-on-scroll delay-100">Magda Betlem</h2>
        <p class="text-accent-500 font-semibold mb-6 animate-on-scroll delay-100">Principal SMSF Specialist</p>
        <p class="text-neutral-700 leading-relaxed animate-on-scroll delay-200">
          With over 18 years of dedicated SMSF expertise, Magda Betlem (CPA) leads our specialist team with passion and integrity. As an Authorised Representative of the SMSF Advisers Network (SAN, AFSL 430062), she helps clients confidently manage their fund's compliance, solve complex SMSF challenges allowing trustees to benefit from the investment flexibility that SMSFs offer whilst ensuring your reporting obligations are met. Supporting clients across Mandurah, Perth, and regional WA, Magda and her team deliver the personal touch and technical depth that makes all the difference.
        </p>
      </div>
    </div>
  </SectionWrapper>

  <!-- Services Grid -->
  <ServicesGrid />

  <!-- Is This You? -->
  <SectionWrapper bgColor="accent">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <p class="text-white/80 font-semibold text-sm uppercase tracking-wide mb-2 animate-on-scroll">Find Your Fit</p>
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white animate-on-scroll delay-100">Is This You?</h2>
        <p class="text-white/90 text-lg mb-6 animate-on-scroll delay-200">
          At Magnified SMSF Specialists, we help SMSF trustees and future trustees who want clarity and confidence managing their super. Our services are ideally suited for individuals who:
        </p>
        <ul class="space-y-4 mb-8 animate-on-scroll delay-300">
          <li class="flex items-start gap-3 pl-4 border-l-2 border-white/50">
            <span class="text-white/90">Are preparing for retirement, often aged 55 to 65</span>
          </li>
          <li class="flex items-start gap-3 pl-4 border-l-2 border-white/50">
            <span class="text-white/90">Hold a super balance of $600,000 or more</span>
          </li>
          <li class="flex items-start gap-3 pl-4 border-l-2 border-white/50">
            <span class="text-white/90">Earn a personal income of $150,000+ annually</span>
          </li>
          <li class="flex items-start gap-3 pl-4 border-l-2 border-white/50">
            <span class="text-white/90">Value tailored SMSF compliance support and investment strategy documentation</span>
          </li>
        </ul>
        <p class="text-white/90 mb-6">
          If you're outside these ranges but value expert SMSF compliance services, we're still here to help.
        </p>
        <Button href="/contact-us/" variant="white" size="md">
          Book Now
        </Button>
      </div>
      <div class="grid grid-cols-2 gap-4 animate-on-scroll delay-200">
        <div class="rounded-xl overflow-hidden shadow-lg">
          <img src="/images/smsf-specialist-consultation.jpg" alt="SMSF Specialist consultation" class="w-full h-full object-cover aspect-square" loading="lazy" />
        </div>
        <div class="rounded-xl overflow-hidden shadow-lg">
          <img src="/images/smsf-financial-planning-meeting.jpg" alt="Financial planning meeting" class="w-full h-full object-cover aspect-square" loading="lazy" />
        </div>
        <div class="rounded-xl overflow-hidden shadow-lg">
          <img src="/images/smsf-compliance-review.jpg" alt="SMSF compliance review" class="w-full h-full object-cover aspect-square" loading="lazy" />
        </div>
        <div class="rounded-xl overflow-hidden shadow-lg">
          <img src="/images/smsf-retirement-planning-session.jpg" alt="Retirement planning session" class="w-full h-full object-cover aspect-square" loading="lazy" />
        </div>
      </div>
    </div>
  </SectionWrapper>

  <!-- Why Choose Us -->
  <SectionWrapper bgColor="light">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div class="relative animate-on-scroll delay-200">
        <img
          src="/images/magnified-smsf-team-perth.jpg"
          alt="Magnified SMSF Specialists Team"
          class="rounded-2xl shadow-2xl w-full max-h-[600px] object-cover ring-1 ring-neutral-200"
          loading="lazy"
        />
        <div class="absolute bottom-6 right-6 bg-white/95 backdrop-blur-sm px-8 py-4 rounded-xl shadow-xl border border-neutral-100">
          <p class="font-bold text-accent-500 text-sm text-center leading-tight">Trusted by Perth's<br />Professionals</p>
        </div>
      </div>
      <div>
        <p class="text-accent-500 font-semibold text-sm uppercase tracking-wide mb-2 animate-on-scroll">Our Promise</p>
        <h2 class="text-3xl md:text-4xl font-bold mb-8 animate-on-scroll delay-100">Why Choose Magnified SMSF Specialists?</h2>
        <div class="border-l-4 border-accent-500 pl-5 mb-6 animate-on-scroll delay-200">
          <p class="text-neutral-700 text-lg leading-relaxed">
            Choosing the right partner for your SMSF makes all the difference. At Magnified SMSF Specialists, our commitment extends beyond numbers; we prioritise proactive compliance management to ensure your SMSF remains ATO-compliant and stress-free.
          </p>
        </div>
        <p class="text-neutral-700 text-lg leading-relaxed mb-6 animate-on-scroll delay-300">
          Our approach is uniquely focused on providing strategic investment guidance, integrating estate planning, and maximising tax efficiency through regular quarterly reviews. We believe in unparalleled service and support, offering direct access to senior specialists and ongoing trustee education.
        </p>
        <p class="text-neutral-700 text-lg leading-relaxed mb-8 animate-on-scroll delay-300">
          This holistic methodology, combined with our local presence and empowering technology, ensures your journey to retirement is managed with confidence and optimised for success.
        </p>
        <div class="animate-on-scroll delay-400">
          <Button href="/contact-us/" variant="primary" size="lg">
            Book Your Free Discovery Session
          </Button>
        </div>
      </div>
    </div>
  </SectionWrapper>

  <!-- Local Expertise & Technology -->
  <SectionWrapper bgColor="white">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-16 items-center">
      <!-- Left: Local Expertise -->
      <div class="animate-on-scroll">
        <p class="text-accent-500 font-semibold text-sm uppercase tracking-wide mb-2">Our Locations</p>
        <h2 class="text-2xl md:text-3xl font-bold mb-4">Local Expertise, Premium Services in Perth & Mandurah</h2>
        <div class="border-l-4 border-accent-500 pl-5 mb-6">
          <p class="text-neutral-700 leading-relaxed">
            Conveniently located in Mandurah, we provide premium SMSF services to clients throughout the Perth metropolitan area. Our strategic location allows us to offer:
          </p>
        </div>
        <ul class="space-y-3">
          <li class="flex items-center gap-3">
            <span class="bg-accent-50 rounded-full p-1 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-accent-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6 9 17l-5-5"></path></svg>
            </span>
            <span class="text-neutral-700 font-medium">Face-to-face consultations</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="bg-accent-50 rounded-full p-1 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-accent-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6 9 17l-5-5"></path></svg>
            </span>
            <span class="text-neutral-700 font-medium">Flexible meeting arrangements</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="bg-accent-50 rounded-full p-1 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-accent-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6 9 17l-5-5"></path></svg>
            </span>
            <span class="text-neutral-700 font-medium">Personalised Service Delivery</span>
          </li>
        </ul>
      </div>

      <!-- Center: Image -->
      <div class="flex justify-center animate-on-scroll delay-200">
        <img
          src="/images/smsf-services-perth-mandurah.jpg"
          alt="Magnified SMSF Specialists Premium Services in Perth and Mandurah"
          class="rounded-2xl shadow-2xl w-full max-h-[500px] object-cover ring-1 ring-neutral-200"
          loading="lazy"
        />
      </div>

      <!-- Right: Technology -->
      <div class="animate-on-scroll delay-400">
        <p class="text-accent-500 font-semibold text-sm uppercase tracking-wide mb-2">Your Portal</p>
        <h2 class="text-2xl md:text-3xl font-bold mb-4">Technology That Empowers You: The Class Super Portal</h2>
        <div class="border-l-4 border-accent-500 pl-5 mb-6">
          <p class="text-neutral-700 leading-relaxed">
            Access your SMSF information anytime, anywhere through our state-of-the-art Class Super portal:
          </p>
        </div>
        <ul class="space-y-3">
          <li class="flex items-center gap-3">
            <span class="bg-accent-50 rounded-full p-1 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-accent-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6 9 17l-5-5"></path></svg>
            </span>
            <span class="text-neutral-700 font-medium">Regular balance updates</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="bg-accent-50 rounded-full p-1 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-accent-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6 9 17l-5-5"></path></svg>
            </span>
            <span class="text-neutral-700 font-medium">Performance tracking</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="bg-accent-50 rounded-full p-1 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-accent-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6 9 17l-5-5"></path></svg>
            </span>
            <span class="text-neutral-700 font-medium">Document management</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="bg-accent-50 rounded-full p-1 flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-accent-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6 9 17l-5-5"></path></svg>
            </span>
            <span class="text-neutral-700 font-medium">Secure communication platform</span>
          </li>
        </ul>
      </div>
    </div>
  </SectionWrapper>

  <!-- Values -->
  <ValuesSection />

  <!-- Reviews -->
  <ReviewsSection />

  <!-- How We Work -->
  <HowWeWorkSection />

  <!-- Contact Section -->
  <ContactSection />

  <!-- Map -->
  <MapSection />
</Layout>
